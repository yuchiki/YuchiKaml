#include<list>
#include<IO>

// main
let isEven x = x / 2 * 2 == x in
let show_list l =
    let _ = map (\x -> let _ = print_num x in print_string " ") l in
    print_newline () in

let main _ =
    let _ = print_string "input num>" in
    let n = read_num () in
    let list = range 0 n in
    let _ = show_list list in
    let list = filter isEven list in
    let _ = print_string "evens are: " in
    let _ = show_list list in
    let list = map (\x -> x * x) list in
    let _ = print_string "squares are: " in
    let _ = show_list list in
    let _ = print_string "And the sum is: " in
    let _ = print_num (fold 0 (\x -> \y -> x + y) list) in
    print_newline () in
main ()
